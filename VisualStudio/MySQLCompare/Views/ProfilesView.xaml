            <Button Command="{Binding Path=EditProfileCommand}" Foreground="{StaticResource ResourceKey=MainBlueBrush}" Style="{StaticResource ResourceKey=TextButton}" Width="100">~ Edit Profile</Button>
        </StackPanel>
        -->
        
